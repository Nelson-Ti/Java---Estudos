package ParaTeste;

import java.util.Scanner;

public class Teste{
     public static void main(String[] args){
     
         
         Scanner input = new Scanner(System.in);
  
         int numAlunos = 5;
  double[] NotasAlunos = new double [numAlunos];
  double Mediaturma;
  double divisão;
  double soma = 0;
  
  // leitura das notas
  for(int i = 0; i<numAlunos; ++i){
  System.out.println("Insira a nota do " + (i+1) + " aluno ");
  NotasAlunos[i] = input.nextDouble(); 
  }
  
  
  //calculando a media
    for(int i = 0; i<numAlunos; i++){
   soma += NotasAlunos[i];
    }

 divisão =NotasAlunos.length;
 Mediaturma=(soma/divisão);
System.out.println("A media geral da turma é \n" + Mediaturma);
                                   
  
  
  
  
        }
         
     }    
}



    
